<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.krld.patient.views.BackgroundView
        android:id="@+id/generalMenu_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/generalMenu_play"
            style="@style/BaseButton"
            android:text="@string/label_play_game" />

        <Button
            android:id="@+id/generalMenu_ratings"
            style="@style/BaseButton"
            android:enabled="false"
            android:text="@string/label_ratings" />

        <Button
            android:id="@+id/generalMenu_settings"
            style="@style/BaseButton"
            android:enabled="false"
            android:text="@string/label_settings" />

    </LinearLayout>
</FrameLayout>